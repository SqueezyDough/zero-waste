<script>
const highlights = document.querySelectorAll('.scroll-highlight');

window.onscroll = function() {
  highlight();
};

function highlight() {
  highlights.forEach( function (item){
    const rect = item.getBoundingClientRect();
    if (rect.top <= 300) item.classList.add("active");
  });
}
